
 <div class="featured-item-title">
  <div class="sr-only">
  <%= t('hyrax.homepage.featured_collections.document.title_label') %>
  </div>
  <div class="flex">
    <div class= 'homepage-work-thumbnail'>
      <%= link_to [hyrax, featured] do %>
          <%= render_thumbnail_tag(featured, {width: 90}, {suppress_link: true}) %>
        <% end %>
    </div>
    <div>
      <h5>
        <%= link_to [hyrax, featured] do %>
          <%= featured.title.first %>
        <% end %>
      </h5>
        <%
=begin%>
 <% featured_creator = ActiveSupport::JSON.decode(featured.creator_hash[0])[0]
          if featured_creator["creator_family_name"] && featured_creator["creator_given_name"] %>
            <p class="creator-label">
              <%= featured_creator["creator_family_name"] %>, <%= featured_creator["creator_given_name"] %>
            </p>
        <% elsif featured_creator["creator_family_name"]%>
          <p class="creator-label">
              <%= featured_creator["creator_family_name"] %>
          </p>
        <% elsif featured_creator["creator_organization_name"]%>
          <p class="creator-label">
              <%= featured_creator["creator_organization_name"] %>
          </p>
        <% end %> 
<%
=end%>
    </div>
  </div>
</div> 


<%
=begin%>
 <% collections.each do |collection| %>
  <div class="col-xs-12 col-sm-6 col-md-4 collection-card-container">
    <div class="collection-card">
      <%= link_to [hyrax, collection] do %>
        <div class="collection-thumbnail center-block">
            <%= render_thumbnail_tag(collection, { class: "img-responsive", alt: "#{collection.title_or_label} #{ t('hyrax.homepage.admin_sets.thumbnail')}" },
            { suppress_link: true }) %>
        </div>
        <div class= "collection-label">
          <%= collection.title_or_label %>
        </div>
      <% end %>
    </div>
  </div>
<% end %> 
<%
=end%>
