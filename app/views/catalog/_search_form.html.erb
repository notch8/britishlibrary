<%= form_tag search_form_action, method: :get, class: "form-horizontal search-form", id: "search-form-header", role: "search" do %>
  <%= render_hash_as_hidden_fields(search_state.params_for_search.except(:q, :search_field, :qt, :page, :utf8)) %>
  <%= hidden_field_tag :search_field, 'all_fields' %>
  <div class="form-group">
  <%# OVERRIDE TO REMOVE LABEL HERE %>
    <div class="input-group">
      <%= text_field_tag :q, current_search_parameters , class: "q form-control search-field-header-large", id: "search-field-header", placeholder: t("hyrax.search.form.q.placeholder_long") %>
      <%#= text_field_tag :q, current_search_parameters , class: "q form-control search-field-header-small", id: "search-field-header", placeholder: t("hyrax.search.form.q.placeholder_short") %>
      <div class="input-group-btn">
        <button type="submit" class="btn btn-primary" id="search-submit-header">
          <%= t('hyrax.search.button.html') %>
        </button>
<%# OVERRIDE TO REMOVE DROPDOWN BUTTON TO SEARCH "MY WORKS" AS A LOGGED IN USER %>
      </div><!-- /.input-group-btn -->
    </div><!-- /.input-group -->
    
  </div><!-- /.form-group -->
<% end %>
