<% content_for :page_title, "Shared Research Repository" %>

<div class="container homepage-container">
  <div class= "row">
    <div class="col-sm-6 pt-40 homepage-left">
      <div class= "flex">
         <%= image_tag("bannerlogo.png", class: "tenant-logo banner-logo", alt: "Shared Research Repository") %>
        <div>
          <h2>Shared Research Repository</h2>
          <h3 class="splash-page">for cultural and heritage organisations</h3>
        </div>
      </div>
        <h4 class="pt-40 splash-page">
            Welcome to our shared repository where youâ€™ll find research produced by staff of the British Library and our current partner organisations: the British Museum, MOLA (Museum of London Archaeology), National Museums Scotland and Royal Botanic Gardens, Kew.<br/><br/>
            Visit one repository at a time, or use the search box to search and explore publications, reports, datasets and papers from across our combined content.
        </h4>
    </div>
    <div class="col-sm-6 pt-40 homepage-right">
      <%# SEARCH BAR FOR HOME PAGE %>
      <%= render partial: 'catalog/search_form', locals: { search_form_action: full_search_url } %>
      <h2 class="pt-40">Browse our partner repositories:</h2>
      <div class="row logo-grid">
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('mola')}" do %>
            <%= image_tag("splash-logos/MolaLogo.png", class: "tenant-logo", alt: "MOLA") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('nms')}" do %>
            <%= image_tag("splash-logos/NMSlogo1.png", class: "tenant-logo", alt: "National Museum of Scotland") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('bl')}" do %>
             <%= image_tag("splash-logos/britishlibrarylogo.png", class: "tenant-logo", alt: "British Library") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('kew')}" do %>
            <%= image_tag("splash-logos/Kew_Logo.png", class: "tenant-logo", alt: "Royal Botanic Gardens, Kew") %>
          <% end %>
        </div>
        <div class="col-xs-6 col-sm-4 text-center">
          <%= link_to "//#{host_for('britishmuseum')}" do %>
            <%= image_tag("splash-logos/BMlogo.png", class: "tenant-logo", alt: "The British Museum") %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
